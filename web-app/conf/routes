# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.ApplicationController.index
GET     /refresh                     controllers.ApplicationController.refresh
GET     /about                       controllers.AboutController.about

GET     /login/strava                controllers.auth.AuthController.login(scope: String)
GET     /link/strava                 controllers.auth.AuthController.link(scope: String)
GET     /authorize/strava            controllers.auth.AuthController.authorize
GET     /logout                      controllers.auth.AuthController.logout

# REST API
GET     /rest/club/:action           controllers.RestController.recentClub(action: String)
GET     /rest/athlete/statistics     controllers.RestController.statistics
GET     /rest/athlete/yearly/:action controllers.RestController.yearly(action: String)
GET     /rest/athlete/ytd/:action    controllers.RestController.ytd(action: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)
GET     /counter                     controllers.Assets.at(path="/public", file="html/counter.html")
